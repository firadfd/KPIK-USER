<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:backgroundTint="@color/card_bg"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30sp"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="15dp"
            android:maxLines="1"
            android:text="Name"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tName"
            android:fontFamily="@font/poppins"
            android:layout_marginStart="30sp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:text="Number"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/copyNumber"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/tName"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/tNumber"
            android:src="@drawable/copy" />

        <TextView
            android:id="@+id/tPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tNumber"
            android:layout_marginStart="30sp"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:text="Post"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tDpt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tPost"
            android:fontFamily="@font/poppins"
            android:layout_marginStart="30sp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:text="Department"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tShift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tDpt"
            android:fontFamily="@font/poppins"
            android:layout_marginStart="30sp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:text="Shift"
            android:textColor="@color/text_color"
            android:textSize="16sp" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="05dp"
            android:src="@drawable/person" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>